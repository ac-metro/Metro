---
const { navSelected } = Astro.props;
---

<nav>
    <h1>Product Category SEO Landing Page Content Creator</h1>
       <ul >
        <li class={navSelected == 1 ? 'selected' : ''}>Ideation</li>
        <li class={navSelected == 2 ? 'selected' : ''}>Refinement</li>
        <li class={navSelected == 3 ? 'selected' : ''}>Links</li>
        <li class={navSelected == 4 ? 'selected' : ''}>Export/Publish</li>
    </ul>
</nav>

<style>
    nav{
        padding: var(--main-padding) 0;
    }

    ul {
        margin: 0;
        padding: 0  0.25rem;
        display: flex;
        width: fit-content;
        border-bottom: 1px solid var(--color-05);
        li{
            list-style: none;
            padding: var(--main-padding);
            &.selected{
                border-bottom: 2px solid var(--color-03);
                color: var(--color-02)
            }
        }       
    }

</style>